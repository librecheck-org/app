    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Debug on Firefox",
            "url": "http://localhost:8100",
            "webRoot": "${workspaceFolder}",
            "profile": "librecheck-debug",
            "keepProfileChanges": true,
            "pathMappings": [
                {
                    "url": "http://localhost:8100/src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        }
    ]
}