{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(pomma89)"
  ],
  "automerge": true,
  "gitLabAutomerge": true,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@capacitor/"
      ],
      "groupName": "Capacitor packages"
    },
    {
      "matchPackagePatterns": [
        "^survey-"
      ],
      "groupName": "Survey.js packages"
    }
  ]
}